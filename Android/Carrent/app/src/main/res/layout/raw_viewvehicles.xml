<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:background="@color/lytgreen"
        app:cardCornerRadius="14dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lytgreen"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:id="@+id/VehicleIV"
                android:src="@drawable/car1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/VehicleNameTV"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/green"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model:"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/VehicleModelTV"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/green"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:id="@+id/LocationTV"
                    android:textColor="@color/green"
                    android:textSize="18dp"/>





            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:id="@+id/VehicleRateTV"
                android:textSize="20dp"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="per day"
                android:id="@+id/VehicleStatusTV"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/green"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:id="@+id/seemoreLL"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See More"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="176dp"
                android:textColor="@color/green"
                android:textSize="20dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_in"/>






        </LinearLayout>






        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>